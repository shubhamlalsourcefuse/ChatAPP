{
    "name": "ChatService",
    "connector": "rest",
    "baseURL": "",
    "crud": false,
    "options": {
        "baseUrl": "$CHAT_SERVICE_BASE_URL",
        "headers": {
            "accept": "application/json",
            "content-type": "application/json"
        }
    },
    "operations": [
        {
            "template": {
                "method": "POST",
                "url": "/messages",
                "headers": {
                    "Authorization": "{token}"
                },
                "body": "{data}"
            },
            "functions": {
                "sendMessage": [
                    "token",
                    "data"
                ]
            }
        },
        {
            "template": {
                "method": "GET",
                "url": "/messages",
                "headers": {
                    "Authorization": "{token}"
                },
                "query": {
                    "filter": "{filter}"
                }
            },
            "functions": {
                "getMessage": [
                    "token",
                    "filter"
                ]
            }
        },
        {
            "template": {
                "method": "DELETE",
                "headers": {
                    "Authorization": "{token}"
                },
                "url": "/messages/{id}"
            },
            "functions": {
                "deleteMessage": [
                    "token",
                    "id"
                ]
            }
        },
        {
            "template": {
                "method": "POST",
                "url": "/message-recipients",
                "headers": {
                    "Authorization": "{token}"
                },
                "body": "{data}"
            },
            "functions": {
                "sendMessageRecipients": [
                    "token",
                    "data"
                ]
            }
        },
        {
            "template": {
                "method": "PATCH",
                "headers": {
                    "Authorization": "{token}"
                },
                "url": "/messages/{id}/message-recipients",
                "body": "{data}",
                "query": {
                    "where": "{where}"
                }
            },
            "functions": {
                "updateMessageRecipients": [
                    "token",
                    "id",
                    "data",
                    "where"
                ]
            }
        }
    ]
}
